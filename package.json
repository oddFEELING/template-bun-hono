{
  "name": "my-api-template",
  "scripts": {
    "dev": "bun run generate:all && concurrently -n \"SERVER,WATCHER\" -c \"cyan,magenta\" \"bun run --hot src/index.ts\" \"bun run scripts/watch-modules.ts\"",
    "dev:simple": "bun run --hot src/index.ts",
    "tooler": "bun run scripts/tooler/index.js",
    "generate:modules": "bun run scripts/generate-module-list.ts",
    "migration:generate": "bun run drizzle-kit generate",
    "generate:schemas": "bun run scripts/generate-schema-list.ts",
    "generate:all": "bun run generate:modules && bun run generate:schemas",
    "migration:run": "bun run drizzle-kit migrate",
    "start": "bun run generate:all && bun run src/index.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.3",
    "@neondatabase/serverless": "^1.0.2",
    "@scalar/hono-api-reference": "^0.9.20",
    "barrelsby": "^2.8.1",
    "better-auth": "^1.3.25",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.9",
    "js-yaml": "^4.1.0",
    "pino": "^9.13.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "ultracite": "6.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
