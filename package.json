{
  "name": "naalya-api",
  "scripts": {
    "dev": "bun run scripts/generate-module-list.ts && concurrently -n \"SERVER,WATCHER\" -c \"cyan,magenta\" \"bun run --hot src/index.ts\" \"bun run scripts/watch-modules.ts\"",
    "dev:simple": "bun run --hot src/index.ts",
    "tooler": "bun run scripts/tooler/index.js",
    "generate:modules": "bun run scripts/generate-module-list.ts",
    "migration:generate": "bun run drizzle-kit generate",
    "migration:run": "bun run drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.3",
    "@neondatabase/serverless": "^1.0.2",
    "@scalar/hono-api-reference": "^0.9.20",
    "barrelsby": "^2.8.1",
    "better-auth": "^1.3.25",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.9",
    "js-yaml": "^4.1.0",
    "pino": "^9.13.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5"
  }
}