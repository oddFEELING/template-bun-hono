{
  "compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}